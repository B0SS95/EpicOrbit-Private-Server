@inherits ShipDetailComponentController

<div style="height: 100%;">

    <div class="row">
        <div class="d-flex justify-content-center" style="width: 100%">
            <ShipItemComponent Active="false" Ship="@Ship" Company="@Company" Click="@((x) => {})" />
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-center" style="width: 100%">
            <h5>@Ship.Description</h5>
        </div>
    </div>

    <div class="pt-2">
        <div class="d-flex justify-content-center" style="width: 100%">
            <h6><b>Hitpoints: </b> @Ship.Hitpoints</h6>
        </div>

        <div class="d-flex justify-content-center" style="width: 100%">
            <h6><b>Laser(s):</b> @Ship.WeaponSlots</h6>
        </div>

        <div class="d-flex justify-content-center" style="width: 100%">
            <h6><b>Generator(s):</b> @Ship.GeneratorSlots</h6>
        </div>

        <div class="d-flex justify-content-center" style="width: 100%">
            <h6><b>Speed:</b> @Ship.Speed</h6>
        </div>
    </div>

    <div style="position: absolute; bottom: 0; width: 100%">
        <div class="btn-group-vertical p-2" role="group" style="width: 100%">
            @if (!Active) {
                <button onclick="@(() => Activate(Ship))" type="button" class="btn btn-success">Activate</button>
            }
            <button onclick="@(() => Equipment(Ship))" type="button" class="btn btn-default">Equipment</button>
        </div>
    </div>

</div>
